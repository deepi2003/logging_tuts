<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern> ACTUAL ---------%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.deepti.tuts.logging.slf4J" level="DEBUG"></logger>

    <root level="INFO">    <!--logger level takes precendence over root level -->
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
